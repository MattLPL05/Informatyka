// PotegowanieSzybkie.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream>

using namespace std;

int main()
{
   // std::cout << "Hello World!\n";

	int a;
	int n;
	int w;
	cout << "Podaj podstawe: ";
	cout << endl;
	cin >> a;
	cout << "Podaj wykladnik: ";
	cout << endl;
	cin >> n;

	w = 1;
	while (n > 0)
	{
		if (n % 2 == 1) 
		{
			w = w * a;
		}
		a = a * a;
		n = n / 2;

	}
	cout << w;
	return w;
}
